<p id="notice"><%= notice %></p>

<h1>Borrowed Books  <%#= link_to '+', new_borrowed_book_path, class: 'btn btn-xl btn-primary' %></h1>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Status</th>
      <th>Limit date</th>
      <th>Return date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowed_books.each do |borrowed_book| %>
      <tr>
        <td><%= borrowed_book.book.short_description %></td>
        <td><%= borrowed_book.user.short_description %></td>
        <td><%= borrowed_book.status %></td>
        <td><%= borrowed_book.limit_date %></td>
        <td><%= borrowed_book.return_date %></td>
        <td><%= link_to 'Show', borrowed_book %></td>
        <td><%= link_to 'Edit', edit_borrowed_book_path(borrowed_book) %></td>
        <td><%= link_to 'Destroy', borrowed_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

