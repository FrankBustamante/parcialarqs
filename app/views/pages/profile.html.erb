<div class="container">
  <%= form_with(model: current_user, url: update_profile_pages_path) do |form| %>
    <% if current_user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this author from being saved:</h2>

        <ul>
          <% current_user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :type_identification %>
      <%= form.select :type_identification, options_for_select(User.type_identifications), {}, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.label :identification %>
      <%= form.text_field :identification, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :profile %>
      <%= form.file_field :profile, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

