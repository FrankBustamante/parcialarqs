<p id="notice"><%= notice %></p>

<h1>Books <%= link_to '+', new_book_path, class: 'btn btn-primary' %></h1>


<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Book score</th>
      <th>Score</th>
      <th>Photo</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= book.stock %></td>
        <td><%= book.book_score %></td>
        <td><%= book.score %></td>
        <td><%= image_tag book.get_image, style: 'max-width: 50px;' %></td>
        <td><%= book.author&.short_description %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

