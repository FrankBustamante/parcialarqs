<p id="notice"><%= notice %></p>

<h1>Books <%= link_to '+', new_book_path, class: 'btn btn-primary' %></h1>


<table class="table table-dark table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Isbn</th>
    <th>Stock</th>
    <th>Book score</th>
    <th>Score</th>
    <th>Author</th>
    <th>Photo</th>
    <th>Favoritos</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.isbn %></td>
      <td><%= book.stock %></td>
      <td><%= book.book_score %></td>
      <td><%= book.score %></td>
      <td><%= book.author&.short_description %></td>
      <td><%= image_tag book.get_image, style: 'max-width: 50px;' %></td>
      <td><%= book.wish_lists.count %> Personas</td>
      <td><%= link_to 'Prestar', borrowed_books_path(current_user, book), data: {method: :post} unless current_user.admin? %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

